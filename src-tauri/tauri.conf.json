{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Taskgrid",
  "version": "0.0.1",
  "identifier": "com.taskgrid.app",
  "build": {
    "beforeDevCommand": "npm run web",
    "beforeBuildCommand": "npm run web:build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../.svelte-kit/output/client"
  },
  "app": {
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Taskgrid",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "maximized": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
